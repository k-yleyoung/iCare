@model IEnumerable<iCare.Models.PatientRecord>

<h2>Patient Records</h2>

<table class="table">
    <thead>
        <tr>
            <th>Record Date</th>
            <th>Treatment Details</th>
            <th>Actions</th> <!-- New column for actions -->
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.RecordDate.ToShortDateString()</td>
                <td>@record.TreatmentDetails</td>
                <td>
                    <!-- Button to upload a PDF document for the specific record -->
                    <a asp-action="UploadDocument" asp-controller="PatientRecord" asp-route-patientId="@record.PatientId" class="btn btn-primary">
                        Upload PDF
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
