@model IEnumerable<iCare.Models.User>

<h1>Manage Users</h1>
<a asp-action="CreateUser" class="btn btn-primary">Create New User</a>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>