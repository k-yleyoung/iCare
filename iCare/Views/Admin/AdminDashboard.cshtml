@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<div class="dashboard-section">
    <h3>Welcome, @User.Identity.Name!</h3>
    <p>This is your dashboard for managing users, system configurations, and monitoring hospital data.</p>
</div>

<div class="card-container">
    <div class="card">
        <h4>Manage Users</h4>
        <p>Add, edit, or remove users from the system.</p>
        <a asp-action="ManageUsers" class="btn btn-primary">Manage Users</a>
    </div>

    <div class="card">
        <h4>System Settings</h4>
        <p>Configure system settings and permissions.</p>
        <a asp-action="SystemSettings" class="btn btn-primary">System Settings</a>
    </div>

    <div class="card">
        <h4>Reports</h4>
        <p>View hospital reports and analytics.</p>
        <a asp-action="ViewReports" class="btn btn-primary">View Reports</a>
    </div>
</div>

<style>
    .dashboard-section {
        margin-bottom: 20px;
    }

    .card-container {
        display: flex;
        gap: 15px;
    }

    .card {
        border: 1px solid #ddd;
        padding: 20px;
        width: 30%;
        text-align: center;
    }

    .btn {
        color: #fff;
        background-color: #ffc107;
        border: none;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 5px;
    }
</style>
