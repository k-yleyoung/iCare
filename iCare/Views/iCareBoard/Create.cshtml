@model iCare.Models.Patient

@{
    ViewData["Title"] = "Create New Patient";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Page Title -->
    <title>@ViewData["Title"] - iCare Application</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384..." crossorigin="anonymous" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Using 'Poppins' font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <!-- Inline CSS -->
    <style>
        /* Gradient Background */
        body {
            background: linear-gradient(to bottom right, #87ceeb, #e0ffff); /* Sky blue gradient */
            min-height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        /* Container Styles */
        .container {
            margin-top: 60px;
            max-width: 600px;
            background-color: #ffffff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Heading Styles */
        h1 {
            font-weight: 600;
            margin-bottom: 30px;
            text-align: center;
        }

        /* Form Styles */
        .form-control {
            border-radius: 50px;
            padding: 15px 20px;
        }

        .form-group label {
            font-weight: 500;
        }

        .btn {
            border-radius: 50px;
            padding: 10px 20px;
            font-weight: 600;
            transition: transform 0.2s, box-shadow 0.2s;
            border: none;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }

        /* Button Hover Effects */
        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        /* Error Messages */
        .text-danger {
            font-size: 14px;
        }

        /* Responsive Adjustments */
        @@media (max-width: 576px) {
            .container {
                margin-top: 30px;
                padding: 30px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Create New Patient</h1>

        <!-- Display validation summary if there are errors -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        }

        <form asp-action="Create" method="post" novalidate>
            <div class="form-group">
                <label asp-for="Name"><i class="fas fa-user"></i> Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth"><i class="fas fa-calendar-alt"></i> Date of Birth</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"><i class="fas fa-map-marker-alt"></i> Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodGroup"><i class="fas fa-tint"></i> Blood Group</label>
                <input asp-for="BloodGroup" class="form-control" />
                <span asp-validation-for="BloodGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentArea"><i class="fas fa-hospital"></i> Treatment Area</label>
                <input asp-for="TreatmentArea" class="form-control" />
                <span asp-validation-for="TreatmentArea" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 text-center">
                <button type="submit" class="btn btn-primary mr-2">
                    <i class="fas fa-plus-circle"></i> Create
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>

    <!-- Include jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Validation Scripts -->
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
