@model iCare.Models.PatientRecord
@{
    ViewData["Title"] = "Delete Treatment";
}

<h1>Delete Treatment</h1>

<p>Are you sure you want to delete this treatment record?</p>

<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.RecordDate.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Treatment Details</dt>
    <dd class="col-sm-10">@Model.TreatmentDetails</dd>

    <dt class="col-sm-2">Doctor ID</dt>
    <dd class="col-sm-10">@Model.DoctorId</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="RecordId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageTreatment" asp-route-patientId="@Model.PatientId" class="btn btn-secondary">Cancel</a>
</form>
