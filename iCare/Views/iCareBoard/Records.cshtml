@model List<string>

@{
    ViewData["Title"] = "Patient Records";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Page Title -->
    <title>@ViewData["Title"] - iCare Application</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Using 'Poppins' font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <!-- Inline CSS -->
    <style>
        /* Gradient Background */
        body {
            background: linear-gradient(to bottom right, #87ceeb, #e0ffff); /* Sky blue gradient */
            min-height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        /* Container Styles */
        .container {
            margin-top: 60px;
            max-width: 800px;
            background-color: #ffffff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Heading Styles */
        h2 {
            font-weight: 600;
            margin-bottom: 30px;
            text-align: center;
        }

        /* Records List */
        .record-list {
            list-style: none;
            padding: 0;
        }

        .record-list li {
            padding: 15px 20px;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .record-list li i {
            color: #007bff;
            margin-right: 10px;
        }

        .record-list li a {
            font-weight: 500;
            color: #007bff;
            text-decoration: none;
        }

        .record-list li a:hover {
            text-decoration: underline;
        }

        /* Form Styles */
        .create-pdf-form textarea {
            width: 100%;
            border-radius: 15px;
            padding: 15px;
            resize: vertical;
        }

        .btn {
            border-radius: 50px;
            padding: 10px 20px;
            font-weight: 600;
            transition: transform 0.2s, box-shadow 0.2s;
            border: none;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        /* Button Hover Effects */
        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        /* No Records Message */
        .no-records {
            text-align: center;
            font-size: 18px;
        }

        /* Responsive Adjustments */
        @@media (max-width: 576px) {
            .container {
                margin-top: 30px;
                padding: 30px;
            }

            .record-list li {
                flex-direction: column;
                align-items: flex-start;
            }

            .record-list li a {
                margin-top: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewBag.PatientName's Records</h2>

        @if (Model.Any())
        {
            <ul class="record-list">
                @foreach (var pdfFile in Model)
                {
                    <li>
                        <div>
                            <i class="fas fa-file-pdf"></i> @pdfFile
                        </div>
                        <a href="~/PDFs/@ViewBag.PatientId/@pdfFile" target="_blank" class="btn btn-link">
                            <i class="fas fa-download"></i> Download
                        </a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="no-records">No records found for this patient.</p>
        }

        <div class="mt-5">
            <h3>Create a New Record</h3>
            <form asp-action="CreatePdf" method="post" class="create-pdf-form">
                <input type="hidden" name="patientId" value="@ViewBag.PatientId" />
                <div class="form-group">
                    <textarea name="documentContent" placeholder="Enter document content here" rows="5" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-file-pdf"></i> Create PDF
                </button>
            </form>
        </div>
    </div>

    <!-- Include jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
