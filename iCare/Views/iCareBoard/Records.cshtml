@model List<string>

@{
    ViewData["Title"] = "Patient Records";
}

<h2>@ViewBag.PatientName's Records</h2>

@if (Model.Any())
{
    <ul>
        @foreach (var pdfFile in Model)
        {
            <li>
                <a href="~/PDFs/@ViewBag.PatientId/@pdfFile" target="_blank">@pdfFile</a>
            </li>
        }
    </ul>
}
else
{
    <p>No records found for this patient.</p>
}

<h3>Create New Record</h3>
<form asp-action="SaveRecord" method="post" enctype="multipart/form-data">
    <input type="hidden" name="PatientId" value="@ViewBag.PatientId" />

    <label for="DocumentContent">Document Content (Text):</label>
    <textarea id="DocumentContent" name="DocumentContent" placeholder="Enter document content here"></textarea>

    <label for="DocumentImage">Upload Image:</label>
    <input type="file" id="DocumentImage" name="DocumentImage" accept="image/*" />

    <button type="submit">Save Record</button>
</form>
