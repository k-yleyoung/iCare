@model iCare.Models.Patient

@{
    ViewData["Title"] = "Patient Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Page Title -->
    <title>@ViewData["Title"] - iCare Application</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Using 'Poppins' font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <!-- Inline CSS -->
    <style>
        /* Gradient Background */
        body {
            background: linear-gradient(to bottom right, #87ceeb, #e0ffff); /* Sky blue gradient */
            min-height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        /* Container Styles */
        .container {
            margin-top: 60px;
            max-width: 800px;
            background-color: #ffffff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Heading Styles */
        h1 {
            font-weight: 600;
            margin-bottom: 30px;
            text-align: center;
        }

        /* Patient Details Styles */
        .patient-details h3 {
            font-weight: 600;
            margin-bottom: 20px;
        }

        .patient-details p {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .patient-details p i {
            color: #007bff;
            margin-right: 10px;
        }

        /* Button Styles */
        .btn {
            border-radius: 50px;
            padding: 10px 20px;
            font-weight: 600;
            transition: transform 0.2s, box-shadow 0.2s;
            border: none;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }

        /* Button Hover Effects */
        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        /* Responsive Adjustments */
        @@media (max-width: 576px) {
            .container {
                margin-top: 30px;
                padding: 30px;
            }

            .patient-details p {
                font-size: 16px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Patient Details</h1>

        <div class="patient-details">
            <h3><i class="fas fa-user"></i> @Model.Name</h3>
            <p><i class="fas fa-calendar-alt"></i> <strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")</p>
            <p><i class="fas fa-map-marker-alt"></i> <strong>Address:</strong> @Model.Address</p>
            <p><i class="fas fa-tint"></i> <strong>Blood Group:</strong> @Model.BloodGroup</p>
            <p><i class="fas fa-hospital"></i> <strong>Treatment Area:</strong> @Model.TreatmentArea</p>
        </div>

        <div class="mt-5 text-center">
            <!-- Manage Documents button -->
            <a asp-action="ManageDocuments" asp-route-patientId="@Model.Id" class="btn btn-primary mr-2">
                <i class="fas fa-file-medical-alt"></i> Manage Documents
            </a>
            <!-- Manage Treatment button -->
            <a asp-action="ManageTreatment" asp-route-patientId="@Model.Id" class="btn btn-secondary">
                <i class="fas fa-notes-medical"></i> Manage Treatment
            </a>
        </div>
    </div>

    <!-- Include jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
