@model IEnumerable<iCare.Models.Patient>

@{
    ViewData["Title"] = "My Care Board";
}

<h2>My Assigned Patients</h2>

@if (Model.Any())
{
    <ul class="list-group">
        @foreach (var patient in Model)
        {
            <li class="list-group-item">
                <h4>@patient.Name (@patient.BloodGroup)</h4>
                <p>Assigned Location: @patient.TreatmentArea</p>
                <p>DOB: @patient.DateOfBirth.ToShortDateString()</p>
                <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-info">View Patient</a>
            </li>
        }
    </ul>
}
else
{
    <p>No patients assigned.</p>
}
