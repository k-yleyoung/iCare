@model IEnumerable<iCare.Models.Patient>

@{
    ViewData["Title"] = "My Care Board";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Page Title -->
    <title>@ViewData["Title"] - iCare Application</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384..." crossorigin="anonymous" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Using 'Poppins' font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <!-- Inline CSS -->
    <style>
        /* Gradient Background */
        body {
            background: linear-gradient(to bottom right, #87ceeb, #e0ffff); /* Sky blue gradient */
            min-height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        /* Container Styles */
        .container {
            margin-top: 60px;
            max-width: 960px;
        }

        /* Heading Styles */
        h2 {
            font-weight: 600;
            margin-bottom: 30px;
            text-align: center;
        }

        /* Card Styles */
        .patient-card {
            border: none;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .patient-card .card-body {
                padding: 20px;
            }

            .patient-card h4 {
                font-weight: 600;
            }

        .btn-view {
            border-radius: 50px;
            padding: 10px 20px;
            font-weight: 600;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .btn-view:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

        /* No Patients Message */
        .no-patients {
            text-align: center;
            font-size: 18px;
            margin-top: 50px;
        }

        /* Responsive Adjustments */
        @@media (max-width: 576px) {
            .container {
                margin-top: 30px;
                padding: 0 15px;
            }

            .patient-card {
                margin-bottom: 15px;
            }

                .patient-card .card-body {
                    padding: 15px;
                }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>My Assigned Patients</h2>

        @if (Model.Any())
        {
            <div class="row">
                @foreach (var patient in Model)
                {
                    <div class="col-md-6">
                        <div class="card patient-card">
                            <div class="card-body">
                                <h4>@patient.Name (@patient.BloodGroup)</h4>
                                <p><strong>Assigned Location:</strong> @patient.TreatmentArea</p>
                                <p><strong>DOB:</strong> @patient.DateOfBirth.ToShortDateString()</p>
                                <a asp-action="ViewPatient" asp-route-id="@patient.Id" class="btn btn-primary btn-view">
                                    <i class="fas fa-user"></i> View Patient
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="no-patients">No patients assigned.</p>
        }
    </div>

    <!-- Include jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
