@model IEnumerable<iCare.Models.Patient>

@{
    ViewData["Title"] = "My Care Board";
}

<h1>My Care Board</h1>

@if (Model.Any())
{
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Address</th>
                <th>Blood Group</th>
                <th>Treatment Area</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.Name</td>
                    <td>@patient.DateOfBirth.ToString("yyyy-MM-dd")</td>
                    <td>@patient.Address</td>
                    <td>@patient.BloodGroup</td>
                    <td>@patient.TreatmentArea</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No patients assigned.</p>
}
