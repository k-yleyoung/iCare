@model IEnumerable<iCare.Models.Document>

@{
    ViewData["Title"] = "Manage Documents";
    var patient = ViewBag.Patient as iCare.Models.Patient;
}

<h1>Manage Documents for @patient.Name</h1>

<a asp-action="UploadDocument" asp-route-patientId="@patient.Id" class="btn btn-primary">Upload New Document</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Document Name</th>
            <th>Document Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var document in Model)
        {
            <tr>
                <td>@document.DocName</td>
                <td>@document.DocType</td>
                <td>
                    <a asp-action="DownloadDocument" asp-route-id="@document.DocId" class="btn btn-sm btn-primary">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>
