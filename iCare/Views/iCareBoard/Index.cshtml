@model IEnumerable<iCare.Models.Patient>

@{
    ViewData["Title"] = "iCare Board";
}

<h1>iCare Board</h1>

<!-- Button to create a new patient -->
<a asp-action="Create" class="btn btn-primary mb-3">Create New Patient</a>

<table class="table">
    <thead>
        <tr>
            <th>Actions</th> <!-- Column for Edit, View Records, and View Patient buttons -->
            <th>Id</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Address</th>
            <th>Blood Group</th>
            <th>Treatment Area</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>
                    <!-- Edit button for each patient -->
                    <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-secondary">Edit</a>
                    <!-- View Records button for each patient -->
                    <a asp-action="Records" asp-route-patientId="@patient.Id" class="btn btn-info">View Records</a>
                    <!-- New View Patient button for each patient -->
                    <a asp-action="ViewPatient" asp-route-id="@patient.Id" class="btn btn-success">View Patient</a>
                </td>
                <td>@patient.Id</td>
                <td>@patient.Name</td>
                <td>@patient.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>@patient.Address</td>
                <td>@patient.BloodGroup</td>
                <td>@patient.TreatmentArea</td>
            </tr>
        }
    </tbody>
</table>
