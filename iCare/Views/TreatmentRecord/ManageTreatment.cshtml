@model IEnumerable<iCare.Models.PatientRecord>

@{
    ViewData["Title"] = "Manage Treatments";
    var patient = ViewBag.Patient as iCare.Models.Patient;
}

<h1>Manage Treatments for @patient.Name</h1>

<a asp-action="Create" asp-route-patientId="@patient.Id" class="btn btn-primary">Add New Treatment</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Date</th>
            <th>Doctor</th>
            <th>Treatment Details</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.RecordDate.ToString("yyyy-MM-dd")</td>
                <td>@record.Doctor.Username</td>
                <td>@record.TreatmentDetails</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@record.RecordId" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@record.RecordId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
