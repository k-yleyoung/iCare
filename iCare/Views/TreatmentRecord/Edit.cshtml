@model iCare.Models.PatientRecord

@{
    ViewData["Title"] = "Edit Treatment";
    var patient = ViewBag.Patient as iCare.Models.Patient;
}

@if (patient != null)
{
    <h1>Edit Treatment for @patient.Name</h1>
}
else
{
    <h1>Edit Treatment</h1>
}

<form asp-action="Edit">
    <input type="hidden" asp-for="RecordId" />
    <input type="hidden" asp-for="PatientId" />
    <div class="form-group">
        <label asp-for="RecordDate"></label>
        <input asp-for="RecordDate" class="form-control" type="date" />
        <span asp-validation-for="RecordDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TreatmentDetails"></label>
        <textarea asp-for="TreatmentDetails" class="form-control"></textarea>
        <span asp-validation-for="TreatmentDetails" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DoctorId">Doctor</label>
        <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.Doctors">
            <option value="">-- Select Doctor --</option>
        </select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ManageTreatment" asp-route-patientId="@Model.PatientId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
